{erl_opts, [debug_info]}.
{deps, [
    {cowboy, "2.10.0"},
    {jiffy, "1.1.1"},
    {epgsql, "4.7.1"},
    {jwt, "0.1.11"},
    {bcrypt, "1.2.2"}
]}.

{relx, [
    {release, {app_name, "0.1.0"}, [
        app_name,
        sasl,
        runtime_tools
    ]},
    {dev_mode, true},
    {include_erts, false},
    {extended_start_script, true},
    {sys_config, "./config/sys.config"},
    {vm_args, "./config/vm.args"}
]}.

{profiles, [
    {prod, [
        {relx, [
            {dev_mode, false},
            {include_erts, true}
        ]}
    ]},
    {test, [
        {deps, [
            {proper, "1.4.0"},
            {meck, "0.9.2"}
        ]}
    ]}
]}.

{dialyzer, [
    {warnings, [
        unmatched_returns,
        error_handling,
        unknown
    ]},
    {plt_apps, top_level_deps},
    {plt_extra_apps, []},
    {plt_location, local},
    {base_plt_apps, [stdlib, kernel]},
    {base_plt_location, global}
]}.

{xref_checks, [
    undefined_function_calls,
    undefined_functions,
    locals_not_used,
    deprecated_function_calls,
    deprecated_functions
]}.

{plugins, [
    {rebar3_hex, "7.0.2"},
    {rebar3_hank, "1.4.0"}
]}.

{hank, [
    {rules, [
        unnecessary_function_arguments,
        unused_macros,
        unused_record_fields,
        unused_fixmes,
        unused_ignores,
        unused_callbacks
    ]}
]}.