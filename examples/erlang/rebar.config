{erl_opts, [debug_info]}.

{deps, [
    %% Web server
    {cowboy, "2.10.0"},
    
    %% Database
    {epgsql, "4.7.1"},
    {poolboy, "1.5.2"},
    
    %% JSON
    {jiffy, "1.1.1"},
    {jsx, "3.1.0"},
    
    %% Authentication & Security
    {jwt, "0.1.11"},
    {bcrypt, "1.2.2"},
    
    %% HTTP Client (for external APIs)
    {hackney, "1.18.1"},
    
    %% Utilities
    {uuid, "2.0.5"},
    {recon, "2.5.3"}  % For production debugging
]}.

{relx, [
    {release, {myapp, "0.1.0"}, [
        myapp,
        sasl,
        runtime_tools,
        recon  % Include recon in release
    ]},
    {dev_mode, true},
    {include_erts, false},
    {extended_start_script, true},
    {sys_config, "./config/sys.config"},
    {vm_args, "./config/vm.args"}
]}.

{profiles, [
    {prod, [
        {relx, [
            {dev_mode, false},
            {include_erts, true},
            {sys_config, "./config/sys.config.prod"},
            {vm_args, "./config/vm.args.prod"}
        ]}
    ]},
    {test, [
        {deps, [
            {proper, "1.4.0"},
            {meck, "0.9.2"}
        ]},
        {erl_opts, [debug_info, {d, 'TEST'}]}
    ]}
]}.

{dialyzer, [
    {warnings, [
        unmatched_returns,
        error_handling,
        unknown
    ]},
    {plt_apps, top_level_deps},
    {plt_extra_apps, [ssl, crypto]},
    {plt_location, local},
    {base_plt_apps, [stdlib, kernel, ssl, crypto]},
    {base_plt_location, global}
]}.

{xref_checks, [
    undefined_function_calls,
    undefined_functions,
    locals_not_used,
    deprecated_function_calls,
    deprecated_functions
]}.

{plugins, [
    {rebar3_hex, "7.0.2"},
    {rebar3_hank, "1.4.0"}
]}.

{hank, [
    {rules, [
        unnecessary_function_arguments,
        unused_macros,
        unused_record_fields,
        unused_fixmes,
        unused_ignores,
        unused_callbacks
    ]}
]}.

{cover_enabled, true}.
{cover_opts, [verbose]}.

{eunit_opts, [
    verbose,
    {report, {eunit_surefire, [{dir, "."}]}}
]}.

{ct_opts, [
    {sys_config, "test/test.config"}
]}.

{shell, [
    {config, "config/sys.config"},
    {apps, [myapp]}
]}.